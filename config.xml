<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.izipass.izipos" version="2.0.0.14" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>IziPosDev</name>
    <description>
    </description>
    <author email="izipos.dev@gmail.com" href="http://www.izi-pass.com">
        Izipass
    </author>
    <access origin="*" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <content src="index.html" />
    <preference name="fullscreen" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
	<preference name="orientation" value="all" />
    <allow-navigation href="*" />
    <plugin name="cordova-plugin-x-toast" spec="https://github.com/EddyVerbruggen/Toast-PhoneGap-Plugin.git" />
    <plugin name="fr._46cl.focus" spec="https://github.com/46cl/cordova-android-focus-plugin" />
    <plugin name="cordova-plugin-device" spec="~1.1.2" />
    <plugin name="com.borismus.webintent" spec="https://github.com/Initsogar/cordova-webintent.git" />
    <plugin name="cordova-plugin-networkinterface" spec="~1.0.8" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.2" />
	<plugin name="phonegap-plugin-barcodescanner" spec="~6.0.1" />
	<icon src="resources/icon.png" platform="ios" />
    <platform name="ios">
		<icon gap:platform="ios" height="228" src="resources/ios/icon/Icon-App-76x76@3x.png" width="228" />
		<icon gap:platform="ios" height="152" src="resources/ios/icon/Icon-App-76x76@2x.png" width="152" />
		<icon gap:platform="ios" height="76" src="resources/ios/icon/Icon-App-76x76@1x.png" width="76" />
		<icon gap:platform="ios" height="180" src="resources/ios/icon/Icon-App-60x60@3x.png" width="180" />
		<icon gap:platform="ios" height="120" src="resources/ios/icon/Icon-App-60x60@2x.png" width="120" />
		<icon gap:platform="ios" height="60" src="resources/ios/icon/Icon-App-60x60@1x.png" width="60" />
		<icon gap:platform="ios" height="80" src="resources/ios/icon/Icon-App-40x40@2x.png" width="80" />
		<icon gap:platform="ios" height="40" src="resources/ios/icon/Icon-App-40x40@1x.png" width="40" />
		<icon gap:platform="ios" height="87" src="resources/ios/icon/Icon-App-29x29@3x.png" width="87" />
		<icon gap:platform="ios" height="58" src="resources/ios/icon/Icon-App-29x29@2x.png" width="58" />
		<icon gap:platform="ios" height="29" src="resources/ios/icon/Icon-App-29x29@1x.png" width="29" />
        <splash gap:platform="ios" height="768" src="resources/ios/splash/Default-Landscape~ipad.png" width="1024" />
        <splash gap:platform="ios" height="1024" src="resources/ios/splash/Default-Portrait~ipad.png" width="768" />
        <splash gap:platform="ios" height="1136" src="resources/ios/splash/Default-568h@2x~iphone.png" width="640" />
        <splash gap:platform="ios" height="960" src="resources/ios/splash/Default@2x~iphone.png" width="640" />
        <splash gap:platform="ios" height="480" src="resources/ios/splash/Default~iphone.png" width="320" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="resources/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="resources/android/icon/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="resources/android/icon/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi-icon.png" />
        <splash density="land-ldpi" src="resources/android/splash/drawable-land-ldpi-screen.png" />
        <splash density="land-mdpi" src="resources/android/splash/drawable-land-mdpi-screen.png" />
        <splash density="land-hdpi" src="resources/android/splash/drawable-land-hdpi-screen.png" />
        <splash density="land-xhdpi" src="resources/android/splash/drawable-land-xhdpi-screen.png" />
        <splash density="land-xxhdpi" src="resources/android/splash/drawable-land-xxhdpi-screen.png" />
        <splash density="land-xxxhdpi" src="resources/android/splash/drawable-land-xxxhdpi-screen.png" />
        <splash density="port-ldpi" src="resources/android/splash/drawable-port-ldpi-screen.png" />
        <splash density="port-mdpi" src="resources/android/splash/drawable-port-mdpi-screen.png" />
        <splash density="port-hdpi" src="resources/android/splash/drawable-port-hdpi-screen.png" />
        <splash density="port-xhdpi" src="resources/android/splash/drawable-port-xhdpi-screen.png" />
        <splash density="port-xxhdpi" src="resources/android/splash/drawable-port-xxhdpi-screen.png" />
        <splash density="port-xxxhdpi" src="resources/android/splash/drawable-port-xxxhdpi-screen.png" />
    </platform>
</widget>
